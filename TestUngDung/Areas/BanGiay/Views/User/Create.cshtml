@model ModelEF.Model.UserAccount

@{
	ViewBag.Title = "Tạo mới người dùng";
	Layout = "~/Areas/BanGiay/Views/Shared/_Layout.cshtml";
}

@section header{
	<i class="fa fa-save"></i>&nbsp;tạo mới người dùng
}

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<div class="col-lg-12 form-group">
			<div class="col-md-6">
				@Html.ActionLink("tạo Mới", "Index", "UserAccount", new { @class = "btn btn-danger" })
			</div>
		</div>
		<div class="col-lg-12 form-group">
			@Html.ValidationSummary(true, "", new { @class = "text-danger" })
			<div class="form-group">
				@Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.TextBoxFor(model => model.UserName, new { @class = "form-control", @placeholder = "Nhập Tên đăng nhập" })
					@Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
				</div>
				@Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.TextBoxFor(model => model.Password, new { @class = "form-control", @type = "password", @placeholder = "nhập mật khẩu" })
					@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(model => model.Status, htmlAttributes: new { @class = "control-label col-md-2" })
				<div class="col-md-10">
					@Html.TextBoxFor(model => model.Status, new { @class = "form-control", @placeholder = "Nhập Status" })
					@Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
				</div>
			</div>

			<div class="form-group">
				<div class="col-md-offset-2 col-md-10">
					<input type="submit" value="Create" class="btn btn-default" />
				</div>
			</div>
		</div>
	</div>
}


